#!/bin/sh

if [ -f ~/.local/share/background/cyberpunk-red2.jpg1 ]; then
	xwallpaper --center ~/.local/share/background/cyberpunk-red.jpg
else
	mpvflags=" --hwdec --loop --no-audio --no-osd-bar --no-osc --scale=nearest --no-input-default-bindings "
	monitor_number=$(xrandr --listmonitors | awk '{print $2}' | head -n 1)
	echo $monitor_number
	if [ $monitor_number == 1 ]; then
		# xwinwrap -b -s -fs -st -sp -nf -ov -fdt -- \
		# 	mpv -wid WID $mpvflags /home/kshmr/.local/share/background/cyberpunk-2077-car3.gif &
		xwinwrap -b -s -fs -st -sp -nf -ov -fdt -- \
			mpv -wid WID $mpvflags ~/.local/share/background/SynthwaveCity.gif &
	else
		# xwinwrap -b -s -fs -st -sp -nf -ov -fdt -- \
		# 	mpv -wid WID $mpvflags /home/kshmr/.local/share/background/doublecar.gif &
		xwinwrap -b -s -fs -st -sp -nf -ov -fdt -- \
			mpv -wid WID $mpvflags ~/.local/share/background/doublecity.gif &
	fi
	
fi
